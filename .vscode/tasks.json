{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++ build _main file",
            "command": "/usr/bin/g++",
            "args": [
                "-g", 
                "${workspaceFolder}/src/_main.cpp",
                "-o", 
                "${workspaceFolder}/src/_main",
                "-std=c++1z"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "[WIN] g++ build active file",
            "command": "${env:MINGW32}/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++1z"
            ],
            "options": {
                "cwd": "${env:MINGW32}/bin",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "[WIN] g++ build _main file",
            "command": "${env:MINGW32}/bin/g++",
            "args": [
                "-g", 
                "${workspaceFolder}/src/_main.cpp",
                "-o", 
                "${workspaceFolder}/src/_main",
                "-std=c++1z"
            ],
            "options": {
                "cwd": "${env:MINGW32}/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}